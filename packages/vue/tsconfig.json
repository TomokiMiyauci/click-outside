{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "jsx": "preserve",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "isolatedModules": false,

    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@share/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
